{
    "name": "@uns/ts-sdk",
    "description": "UNS typescript SDK",
    "version": "2.6.0",
    "contributors": [
        "Pierre Seznec <pierre.seznec@spacelephant.org>",
        "Guillaume Nicolas <guillaume.nicolas@spacelephant.org>",
        "Damien Lecan <damien.lecan@spacelephant.org>",
        "Fabien Treguer <fabien.treguer@spacelephant.org>"
    ],
    "main": "dist/index.js",
    "types": "dist/index",
    "browser": "dist/index.umd.js",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=12.x"
    },
    "scripts": {
        "compile": "tsc",
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "clean": "del dist",
        "lint": "eslint -c ./eslintrc.js \"./src/**/*.ts\" \"./__tests__/**/*.ts\"",
        "lint:fix": "yarn lint --fix",
        "lint:fix:partial": "eslint -c ./eslintrc.js --fix",
        "prettier": "prettier \"./*.{ts,js,json,md}\" \"./{src,__tests}/**/*.{ts,js,json,md}\" --check",
        "prettier:fix": "yarn prettier --write",
        "prettier:fix:partial": "prettier --write",
        "format": "yarn lint && yarn prettier",
        "test": "cross-env CORE_ENV=test jest",
        "test:coverage": "yarn test --coverage --coveragePathIgnorePatterns='/(index.ts)$'"
    },
    "dependencies": {
        "@uns/ark-crypto": "5.3.1",
        "@uns/core-nft-crypto": "5.3.1",
        "@uns/crypto": "5.3.1",
        "deepmerge": "^4.0.0",
        "did-jwt": "^4.0.0",
        "elliptic": "^6.5.2",
        "is-url-superb": "^3.0.0",
        "ky": "^0.13.0",
        "ky-universal": "^0.3.0",
        "nanoid": "^2.1.11"
    },
    "devDependencies": {
        "@types/elliptic": "^6.4.12",
        "@types/jest": "^25.1.2",
        "@types/nanoid": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/eslint-plugin-tslint": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "cross-env": "^7.0.0",
        "del": "^5.1.0",
        "del-cli": "^3.0.0",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.7",
        "nock": "^12.0.0",
        "prettier": "^1.18.2",
        "ts-jest": "^25.2.0",
        "ts-loader": "^6.0.4",
        "tslint": "^5.0.0",
        "typescript": "^3.7.5"
    },
    "jest": {
        "testEnvironment": "node",
        "bail": true,
        "verbose": true,
        "collectCoverage": false,
        "coverageDirectory": "<rootDir>/.coverage",
        "collectCoverageFrom": [
            "./src/**/*.ts",
            "!**/node_modules/**"
        ],
        "watchman": false,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "./__tests__/tsconfig.json"
            }
        },
        "preset": "ts-jest",
        "testMatch": [
            "**/*.test.ts"
        ]
    },
    "repository": "git@github.com:spacelephant/typescript-sdk.git",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "yarn lint:fix:partial",
            "yarn prettier:fix:partial"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
