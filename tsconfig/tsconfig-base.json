{
    "compilerOptions": {
        "lib": ["es2018"],
        "typeRoots": ["../node_modules/@types"],
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "..",
        "outDir": "../dist"
    }
}
